{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
<style>
    body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background: linear-gradient(135deg, #667eea, #764ba2);
        font-family: 'Poppins', sans-serif;
    }

    .register-container {
        background: rgba(255, 255, 255, 0.1);
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.2);
        backdrop-filter: blur(10px);
        text-align: center;
        width: 350px;
        transition: transform 0.3s ease-in-out;
    }

    .register-container:hover {
        transform: scale(1.02);
    }

    h1 {
        color: #fff;
        font-size: 2rem;
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        margin: 10px 0;
        border: none;
        border-radius: 30px;
        background: rgba(255, 255, 255, 0.3);
        color: #fff;
        outline: none;
        transition: background 0.3s ease-in-out;
    }

    .form-control::placeholder {
        color: rgba(255, 255, 255, 0.7);
    }

    .form-control:focus {
        background: rgba(255, 255, 255, 0.5);
    }

    .btn-register {
        display: inline-block;
        padding: 12px 24px;
        margin-top: 10px;
        font-size: 1.2rem;
        color: #fff;
        background: #ff758c;
        border: none;
        border-radius: 30px;
        cursor: pointer;
        box-shadow: 0 4px 15px rgba(255, 117, 140, 0.5);
        transition: transform 0.2s, opacity 0.3s;
    }

    .btn-register:hover {
        transform: translateY(-3px);
        opacity: 0.9;
    }

    .error-message {
        background: rgba(255, 0, 0, 0.7);
        padding: 10px;
        border-radius: 10px;
        color: white;
        margin-bottom: 15px;
    }

    .fade-in {
        animation: fadeIn 1s ease-in-out;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .login-link {
        display: block;
        margin-top: 15px;
        color: #fff;
        text-decoration: none;
        font-size: 1rem;
    }

    .login-link:hover {
        text-decoration: underline;
    }
</style>
{% endblock %}

{% block body %}
<div class="register-container fade-in">
    <h1>Register</h1>

    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="error-message">{{ flash_error }}</div>
    {% endfor %}

    {{ form_start(registrationForm) }}
        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
        <label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}">
            I accept <a href="#">the terms and conditions</a>
           
        </label>
        <button type="submit" class="btn-register">Register
            
        </button>
    {{ form_end(registrationForm) }}

    <a href="{{ path('app_login') }}" class="login-link">Already a member? Log in here</a>
</div>
{% endblock %}

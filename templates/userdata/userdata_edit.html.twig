{% extends 'base.html.twig' %}

{% block title %}Edit User Data{% endblock %}

{% block stylesheets %}
<style>
    body {
        background: linear-gradient(135deg, #667eea, #764ba2);
        font-family: 'Poppins', sans-serif;
        color: white;
        margin: 0;
        padding: 20px;
    }

    .container {
        width: 50%;
        margin: auto;
        background: rgba(255, 255, 255, 0.1);
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        backdrop-filter: blur(10px);
        text-align: center;
        animation: fadeIn 0.8s ease-in-out;
    }

    h1 {
        margin-bottom: 20px;
    }

    .alert-success {
        background: rgba(46, 204, 113, 0.8);
        padding: 10px;
        border-radius: 10px;
        margin-bottom: 15px;
        color: white;
    }

    form {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    label {
        font-weight: bold;
        margin-top: 10px;
    }

    input {
        width: 80%;
        padding: 10px;
        margin: 5px 0;
        border: none;
        border-radius: 30px;
        background: rgba(255, 255, 255, 0.3);
        color: white;
        text-align: center;
        outline: none;
        transition: 0.3s;
    }

    input::placeholder {
        color: rgba(255, 255, 255, 0.7);
    }

    input:focus {
        background: rgba(255, 255, 255, 0.5);
    }

    .btn-submit {
        margin-top: 20px;
        padding: 12px 20px;
        background: #ff758c;
        border: none;
        border-radius: 30px;
        color: white;
        font-size: 1.1rem;
        cursor: pointer;
        transition: 0.3s;
        box-shadow: 0 4px 10px rgba(255, 117, 140, 0.5);
    }

    .btn-submit:hover {
        background: #ff5a6e;
        transform: translateY(-3px);
    }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(-10px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>
{% endblock %}

{% block body %}
<div class="container">
    <h1>‚úèÔ∏è Edit the informations</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <form action="{{ path('app_userdata_edit', { id: user.userdata.id }) }}" method="POST">
        <label for="firstname">First Name:</label>
        <input type="text" id="firstname" name="firstname" value="{{ user.userdata.firstname }}" required>

        <label for="lastname">Last Name:</label>
        <input type="text" id="lastname" name="lastname" value="{{ user.userdata.lastname }}" required>

        <label for="email">E-mail:</label>
        <input type="text" id="email" name="email" value="{{ user.email }}" required>

        <label for="age">Age:</label>
        <input type="number" id="age" name="age" value="{{ user.userdata.age }}" required>

        <label for="phone">Phone:</label>
        <input type="text" id="phone" name="phone" value="{{ user.userdata.phone }}" required>

        <label for="adress">Address:</label>
        <input type="text" id="adress" name="adress" value="{{ user.userdata.adress }}" required>

        <button type="submit" class="btn-submit">üíæ Save</button>
    </form>
</div>
{% endblock %}
